# Use Node.js base image
FROM node:18

# Set working directory
WORKDIR /app

# Copy package.json and install dependencies
COPY package.json ./
RUN npm install

# Copy the entire client directory
COPY . .

# Build the Next.js app
RUN npm run build

# Expose port 3000 and start the Next.js app
EXPOSE 3000
CMD ["npm", "start"]
